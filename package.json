{
  "name": "midas-mcp",
  "version": "5.45.4",
  "description": "MCP server for Golden Code methodology - everything you vibecode turns to gold",
  "main": "dist/index.js",
  "bin": {
    "midas": "./dist/index.js",
    "midas-mcp": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc && cp -r docs dist/ && cp -r .claude dist/",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "npm run build && node --test dist/tests/*.test.js",
    "test:fast": "npm run build && node --test dist/tests/tracker.test.js dist/tests/phase.test.js dist/tests/tools.test.js dist/tests/security.test.js dist/tests/server.test.js dist/tests/journal.test.js dist/tests/analyze.test.js dist/tests/verify.test.js",
    "test:full": "npm test",
    "prepublishOnly": "npm run test:fast"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "vibecoding",
    "cursor",
    "ai-assistant",
    "developer-tools",
    "golden-code",
    "methodology"
  ],
  "author": "Christian Cattaneo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/christiancattaneo/midas-mcp.git"
  },
  "homepage": "https://github.com/christiancattaneo/midas-mcp#readme",
  "bugs": {
    "url": "https://github.com/christiancattaneo/midas-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "qrcode-terminal": "^0.12.0",
    "update-notifier": "^7.3.1",
    "write-file-atomic": "^7.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/update-notifier": "^6.0.8",
    "@types/write-file-atomic": "^4.0.3",
    "fast-check": "^4.5.3",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "!dist/tests",
    "docs",
    ".claude",
    "README.md",
    "LICENSE"
  ]
}
